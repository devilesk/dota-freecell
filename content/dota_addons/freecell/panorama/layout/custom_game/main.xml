<root>
    <styles>
        <include src="file://{resources}/styles/dotastyles.css" />
        <include src="file://{resources}/styles/custom_game/main.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/custom_game/main.js" />
    </scripts>
    <Panel class="container" hittest="false">
        <Panel id="controls-container" hittest="false">
            <Button id="DashboardButton" hittest="false">
            </Button>
            <Button id="new-game-button" class="btn" onactivate="OnNewGame()">
                <Label id="new-game-button-label" text="#new_game" />
            </Button>
            <Button id="select-game-button" class="btn" onactivate="OnSelectGame()">
                <Label id="select-game-button-label" text="#select_game" />
            </Button>
            <Button id="undo-button" class="btn" onactivate="OnUndo()">
                <Label id="undo-button-label" text="#undo" />
            </Button>
            <Label id="game-number-label" text="" />
        </Panel>
        <Panel id="card-container" hittest="false"></Panel>
    </Panel>
</root>